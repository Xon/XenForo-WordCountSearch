    <template title="SV_WordCountSearch_search_form" version_id="1000600" version_string="1.0.6"><![CDATA[<xen:if is="{$search.range_query}">
<dl class="ctrlUnit">
		<dt><label for="ctrl_word_count_lower">{xen:phrase word_count}:</label></dt>
